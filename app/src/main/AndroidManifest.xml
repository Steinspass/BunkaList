<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bunkalogic.bunkalist">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainEmptyActivity"
                    android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivities.ForgotPasswordActivity">
        </activity>
        <activity android:name=".Activities.LoginActivities.SignUpActivity">
        </activity>
        <activity
                android:name=".Activities.LoginActivities.LoginActivity"
                android:theme="@style/AppTheme.Launcher">
        </activity>
        <activity android:name=".Activities.MainActivity">
        </activity>
    </application>

</manifest>