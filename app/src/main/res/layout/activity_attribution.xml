<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.DetailsActivities.AttributionActivity">



    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <include android:id="@+id/toolbar"
                     layout="@layout/toolbar"/>

            <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp" app:srcCompat="@drawable/themoviedblogogreen"
                    android:id="@+id/imageView2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="@string/activity_login_db_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    android:textColor="@color/colorPrimaryText" android:textStyle="italic" android:textSize="18sp"
                    android:fontFamily="@font/overpass" android:textAlignment="center"/>

            <TextView
                    android:text="Graphic resources:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:textSize="20sp"
                    android:id="@+id/textViewLabelResourcesGraphic"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                    android:text="LottieFiles made by :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:id="@+id/textView55"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewLabelResourcesGraphic"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="https://lottiefiles.com/fuad"
                    android:layout_width="0dp"
                    android:textColorLink="@color/fui_linkColor"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:autoLink="web"
                    android:id="@+id/textView56" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView55"
                    android:layout_marginTop="8dp" android:textSize="18sp"/>

            <TextView
                    android:text="https://lottiefiles.com/gbagaoisan"
                    android:layout_width="0dp"
                    android:textColorLink="@color/fui_linkColor"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:autoLink="web"
                    android:id="@+id/textView60"
                    app:layout_constraintTop_toBottomOf="@+id/textView56" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
                    android:layout_marginStart="8dp"/>

            <TextView
                    android:text="https://lottiefiles.com/bengerousboom"
                    android:layout_width="0dp"
                    android:textColorLink="@color/fui_linkColor"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:autoLink="web"
                    android:id="@+id/textView64"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView60"/>


            <TextView
                    android:text="From :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:id="@+id/textView57"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView64"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="lottiefiles.com"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:textColorLink="@color/fui_linkColor"
                    android:autoLink="web"
                    android:id="@+id/textView58"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/textView57"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView57"
                    app:layout_constraintTop_toTopOf="@+id/textView57"/>

            <TextView
                    android:text="FlatIcon made by :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:id="@+id/textView62"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textView58" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"/>


            <TextView
                    android:text="Icon made by Freepik from www.flaticon.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:textColorLink="@color/fui_linkColor"
                    android:autoLink="web"
                    android:id="@+id/textView61"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView62" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>

            <TextView
                    android:text="Icon made by Flat Icons from www.flaticon.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:textColorLink="@color/fui_linkColor"
                    android:autoLink="web"
                    android:id="@+id/textView63"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView61"
                    android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>