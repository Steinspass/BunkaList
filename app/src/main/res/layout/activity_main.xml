<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textViewName" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageButtonProfile"
            app:layout_constraintHorizontal_bias="0.768" app:layout_constraintVertical_bias="0.849"/>

    <ImageView
            android:layout_width="145dp"
            android:layout_height="132dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageButtonProfile" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSignOut" app:layout_constraintVertical_bias="0.742"
            app:layout_constraintHorizontal_bias="0.024"/>

    <Button
            android:text="Sign Out"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSignOut"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="403dp" app:layout_constraintTop_toBottomOf="@+id/imageButtonProfile"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>