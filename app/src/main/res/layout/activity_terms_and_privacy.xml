<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="match_parent"
        tools:context=".Activities.DetailsActivities.TermsAndPrivacyActivity">

    <include android:id="@+id/toolbar"
             layout="@layout/toolbar"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView59"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/overpass"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textColor="@color/colorPrimaryText"
            android:text="Terms of Use and Policy Privacy and Cookies" android:textStyle="bold"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <TextView
            android:fontFamily="@font/overpass"
            android:text="in this link you have everything related to the privacy policy and cookies :"
            android:layout_width="0dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="wrap_content"
            android:id="@+id/textView60" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView59" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textStyle="italic" android:textAlignment="textStart"/>
    <TextView
            android:fontFamily="@font/overpass"
            android:text="https://www.iubenda.com/privacy-policy/33068007"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textColorLink="@color/colorGooglePlusDark"
            android:id="@+id/textView61" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView60" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="18sp" android:textStyle="bold|italic"/>
</androidx.constraintlayout.widget.ConstraintLayout>