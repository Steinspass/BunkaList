<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <MultiAutoCompleteTextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/multiAutoCompleteTextViewOeuvre"
            android:background="@drawable/edittext_rounded"
            android:textStyle="italic" android:hint="Name of the movie, series, anime" android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewUsername"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextSelectSeason"
            android:background="@drawable/edittext_rounded"
            android:textStyle="italic"
            android:hint="Season"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/multiAutoCompleteTextViewOeuvre" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextChapter" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/multiAutoCompleteTextViewOeuvre"/>
    <EditText
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextChapter"
            android:background="@drawable/edittext_rounded"
            android:hint="Chapter"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/multiAutoCompleteTextViewOeuvre"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/multiAutoCompleteTextViewOeuvre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextContent"
            android:background="@drawable/edittext_rounded"
            android:hint="Discuss what you liked about the chapter" android:padding="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/checkBoxIsSpoiler"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxIsSpoiler"
            android:text="@string/checkbox_is_spoiler" android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/editTextChapter"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/editTextSelectSeason"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextSelectSeason"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textViewUsername"
            android:textSize="18sp" android:textStyle="bold"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>