<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".Fragments.ProfileFragment" android:id="@+id/constraintLayout2">

    <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="220dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:padding="2dp" android:id="@+id/scrollView2">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="220dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/linearLayout" android:padding="2dp">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                    <ImageView
                            android:id="@+id/userImageProfile"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="1dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="85dp"
                                app:contentPaddingTop="15dp"
                                app:contentPaddingRight="15dp"
                                app:contentPaddingLeft="15dp"
                                app:contentPaddingBottom="15dp"
                                app:cardCornerRadius="16dp">

                            <android.support.constraint.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                <TextView
                                        android:id="@+id/userNameProfile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorAccent"
                                        android:layout_marginTop="42dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                                        android:padding="2dp"/>

                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_horizontal"
                                          android:text="230"
                                          android:textSize="14sp"
                                          android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
                                          android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                                          android:layout_marginEnd="8dp"
                                          app:layout_constraintEnd_toStartOf="@+id/userNameProfile"
                                          app:layout_constraintHorizontal_bias="0.468"
                                          android:id="@+id/textView2" android:layout_marginStart="8dp"/>


                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Follows"
                                          android:textSize="14sp"
                                          android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
                                          android:layout_marginStart="8dp"
                                          app:layout_constraintEnd_toStartOf="@+id/userNameProfile"
                                          android:id="@+id/textView"
                                          android:layout_marginTop="8dp"
                                          app:layout_constraintTop_toBottomOf="@+id/textView2"
                                          android:layout_marginEnd="16dp"/>


                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_horizontal"
                                          android:text="127"
                                          android:textSize="14sp"
                                          android:textStyle="bold"
                                          android:id="@+id/textView3"
                                          android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                                          app:layout_constraintStart_toEndOf="@+id/userNameProfile"
                                          android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                                          app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_horizontal"
                                          android:text="Followers"
                                          android:textSize="14sp"
                                          android:textStyle="bold"
                                          android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                                          app:layout_constraintStart_toEndOf="@+id/userNameProfile"
                                          android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                                          app:layout_constraintTop_toBottomOf="@+id/textView3"
                                          android:id="@+id/textView4"/>


                                <TextView
                                        android:id="@+id/numberMovie"
                                        android:text="Movies views: ???"
                                        android:textStyle="italic|bold"
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginEnd="8dp"
                                        app:layout_constraintEnd_toStartOf="@+id/numberAnime"
                                        app:layout_constraintHorizontal_bias="0.043" android:padding="4dp"
                                        android:layout_marginTop="32dp"
                                        app:layout_constraintTop_toBottomOf="@+id/textView"/>

                                <TextView
                                        android:id="@+id/numberSeries"
                                        android:text="Series views: ???"
                                        android:textStyle="italic|bold"
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        app:layout_constraintTop_toBottomOf="@+id/numberMovie"
                                        android:layout_marginEnd="8dp"
                                        app:layout_constraintEnd_toStartOf="@+id/numberManga"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintHorizontal_bias="0.04"
                                        android:padding="4dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        android:layout_marginBottom="2dp"/>

                                <TextView
                                        android:id="@+id/numberAnime"
                                        android:text="Anime views: ???"
                                        android:textStyle="italic|bold"
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_marginEnd="2dp"
                                        android:padding="4dp" android:layout_marginTop="32dp"
                                        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

                                <TextView
                                        android:id="@+id/numberManga"
                                        android:text="Manga reads: ???"
                                        android:textStyle="italic|bold"
                                        android:textSize="14sp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_marginTop="8dp"
                                        app:layout_constraintTop_toBottomOf="@+id/numberAnime"
                                        android:layout_marginEnd="2dp" android:padding="4dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        android:layout_marginBottom="2dp"/>

                            </android.support.constraint.ConstraintLayout>

                        </android.support.v7.widget.CardView>


                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                                  android:layout_height="wrap_content"
                                                                  android:id="@+id/guideline"
                                                                  android:orientation="vertical"
                                                                  app:layout_constraintGuide_percent="0.50"/>
                            <TextView
                                    android:text="@string/name_view_movie"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="8dp" android:layout_marginTop="50dp"
                                    app:layout_constraintTop_toTopOf="parent" android:textStyle="bold|italic"
                                    android:textColor="@color/colorAccent" android:textSize="16sp"
                                    android:padding="4dp"
                                    android:id="@+id/textView6" app:layout_constraintHorizontal_bias="0.0"/>
                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="0.7dp"
                                    android:background="@color/colorSecondaryText"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
                            <Button
                                    android:text="@string/btn_list_all_movies"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/buttonListMovie"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
                                    android:padding="2dp" android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline2" android:textStyle="italic"
                                    app:layout_constraintHorizontal_bias="0.0"
                            />
                            <Button
                                    android:text="@string/btn_top_movie"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/buttonTopFavsMovie"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline2" android:textStyle="italic"
                                    android:padding="2dp"/>

                            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                                  android:layout_height="wrap_content"
                                                                  android:id="@+id/guideline2"
                                                                  app:layout_constraintGuide_begin="150dp"
                                                                  android:orientation="horizontal"/>
                            <TextView
                                    android:text="@string/name_view_series"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/colorAccent" android:textSize="16sp"
                                    android:padding="4dp"
                                    android:id="@+id/textViewNameSeries"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toTopOf="@+id/guideline2"
                                    app:layout_constraintHorizontal_bias="0.0"/>

                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="0.7dp"
                                    android:background="@color/colorSecondaryText"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameSeries"
                                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                            <Button
                                    android:text="@string/btn_list_all_series"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/buttonListSeries"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameSeries"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
                                    android:textStyle="italic"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    android:padding="2dp"
                                    android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline3"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintVertical_bias="0.062"/>
                            <Button
                                    android:text="@string/btn_top_series"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/buttonTopFavsSeries"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameSeries"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    android:layout_marginStart="8dp"
                                    android:textStyle="italic"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    android:padding="2dp"
                                    android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline3"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintVertical_bias="0.062"/>

                            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                                  android:layout_height="wrap_content"
                                                                  android:id="@+id/guideline3"
                                                                  app:layout_constraintGuide_begin="250dp"
                                                                  android:orientation="horizontal"/>

                            <TextView
                                    android:text="@string/name_view_anime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/colorAccent" android:textSize="16sp"
                                    android:padding="4dp"
                                    android:id="@+id/textViewNameAnime"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"/>

                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="0.7dp"
                                    android:background="@color/colorSecondaryText"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameAnime"
                                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                            <Button
                                    android:text="@string/btn_list_all_anime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/buttonListAnime" app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameAnime"
                                    android:layout_marginTop="8dp" android:textStyle="italic" android:padding="2dp"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline4"/>
                            <Button
                                    android:text="@string/btn_top_anime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/buttonTopFavsAnime"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameAnime"
                                    android:textStyle="italic" android:padding="2dp"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline4"/>

                            <TextView
                                    android:text="@string/name_view_manga"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/colorAccent" android:textSize="16sp"
                                    android:padding="4dp"
                                    android:id="@+id/textViewNameManga"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toTopOf="@+id/guideline4" android:layout_marginBottom="8dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintVertical_bias="0.0"/>

                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="0.7dp"
                                    android:background="@color/colorSecondaryText"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameManga"
                                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                                  android:layout_height="wrap_content"
                                                                  android:id="@+id/guideline4"
                                                                  app:layout_constraintGuide_begin="350dp"
                                                                  android:orientation="horizontal"/>
                            <Button
                                    android:text="@string/btn_list_all_manga"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/buttonListManga"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameManga"
                                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                                    android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                                    android:padding="2dp"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    android:layout_marginBottom="16dp"/>
                            <Button
                                    android:text="@string/btn_top_manga"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/buttonTopFavsManga" android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewNameManga"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/button_rounded_transparent_color"
                                    android:padding="2dp" android:layout_marginBottom="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"/>


                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>