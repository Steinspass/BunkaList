<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp" app:srcCompat="@drawable/ic_account_circle_black_24dp"
                    android:id="@+id/imageViewSearchUserItem" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSearchUsername"
                    app:layout_constraintStart_toEndOf="@+id/imageViewSearchUserItem"
                    android:layout_marginStart="16dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textStyle="italic"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>