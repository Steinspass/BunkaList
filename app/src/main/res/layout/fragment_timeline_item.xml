<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/linearLayout3">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewUsername"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewUserImage"
                    android:layout_marginStart="8dp" android:textStyle="bold|italic" android:textSize="16sp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/divider"
                    app:layout_constraintVertical_bias="0.333"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageViewUserImage"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/divider" android:layout_marginTop="4dp"
                    app:layout_constraintVertical_bias="0.3"/>

            <View android:layout_width="0dp"
                  android:layout_height="0.3dp"
                  android:id="@+id/divider"
                  android:background="@color/colorDivider"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewOeuvreName"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewUsername" android:layout_marginStart="16dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSeason" android:textSize="12sp"
                    android:textStyle="italic" android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="@+id/textViewOeuvreName"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCapsNumbers" android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/textViewSeason"
                    android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="italic" android:layout_marginStart="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewOeuvreName"
                    app:layout_constraintHorizontal_bias="0.05"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewContent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_marginBottom="42dp" app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                    android:textAlignment="textStart"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/constraintLayout3">

                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp" app:srcCompat="@drawable/ic_item_timeline_positive"
                        android:id="@+id/imageViewPositive"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textViewNumberPositive"
                        android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp" app:srcCompat="@drawable/ic_item_timeline_negative"
                        android:id="@+id/imageViewNegative"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textViewNumberNegative"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewNumberPositive"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="64dp"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewNumberNegative"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"/>

            </android.support.constraint.ConstraintLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDate"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewContent"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"/>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>