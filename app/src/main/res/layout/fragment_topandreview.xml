<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".Fragments.TopsAndReviewFragment" android:id="@+id/scrollView4">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:id="@+id/constraintLayout5">

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/cardViewPopular"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/recyclerReviews">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:id="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView67"/>

                <View
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:id="@+id/view1"
                        app:layout_constraintTop_toTopOf="parent" android:background="#4C000000"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView67" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:shadowColor="#000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="3"
                        android:layout_marginStart="8dp" android:textStyle="bold|italic"
                        android:text="@string/fragment_top_reviews_title_list"
                        android:textColor="@color/colorAccent" android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>



                <Button
                        android:text="@string/fragment_tops_review_button_top_movies_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonMoviesPopular"
                        android:background="@drawable/button_rounded_transparent_color"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline10" android:layout_marginEnd="8dp"
                        android:textAllCaps="false" android:textStyle="italic" android:layout_marginTop="8dp"
                        android:textAlignment="center"/>
                <Button
                        android:text="@string/fragment_tops_review_button_top_series_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonSeriesPopular"
                        android:background="@drawable/button_rounded_transparent_color"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" android:textAllCaps="false" android:textStyle="italic"
                        android:textAlignment="center"/>
                <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content" android:id="@+id/guideline10"
                                                      android:orientation="vertical"
                                                      app:layout_constraintGuide_percent="0.5"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerReviews"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/guideline8"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabNewReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_gravity="end|bottom"
                app:srcCompat="@drawable/ic_fab_new_timeline"
                app:rippleColor="@color/colorAccentLight"
                android:focusable="true"
                android:clickable="true" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerReviews"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline8"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_begin="282dp"/>

        <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewBannerTopsReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-6667428027256827/9574010337"
                android:layout_marginBottom="8dp"
                ads:layout_constraintBottom_toBottomOf="parent" ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent" ads:layout_constraintTop_toBottomOf="@+id/fabNewReviews"
                android:layout_marginTop="8dp">
        </com.google.android.gms.ads.AdView>


    </android.support.constraint.ConstraintLayout>

</ScrollView>