<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="160dp"
                                             android:layout_height="160dp">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="90dp"
                                                  android:layout_height="90dp" app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  app:civ_border_width="1dp"
                                                  app:civ_border_color="@color/colorAccent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:id="@+id/ImageItemPeople"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewItemPeopleWork"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintTop_toBottomOf="@+id/ImageItemPeople" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginEnd="2dp" android:textAlignment="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewItemPeopleName"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintTop_toBottomOf="@+id/textViewItemPeopleWork" android:layout_marginTop="2dp"
            android:textStyle="italic" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp" android:layout_marginStart="2dp"
            android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>