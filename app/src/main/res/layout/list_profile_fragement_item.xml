<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLayout7"
              android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="95dp"
                    android:layout_height="0dp"
                    android:id="@+id/imageViewPosterListProfile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="0dp" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTitleListProfile"
                    android:textStyle="bold|italic" android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textViewDateReleastListProfile"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageViewPosterListProfile"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    android:maxLines="2" android:ellipsize="end"
                    android:maxEms="35" android:padding="2dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDateReleastListProfile"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="16dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDescriptionListProfile"
                    app:layout_constraintStart_toEndOf="@+id/imageViewPosterListProfile"
                    android:layout_marginStart="8dp"
                    android:maxLines="5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:textStyle="italic" android:textAlignment="viewStart"
                    android:textSize="14sp" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewRatingListProfile"
                    android:ellipsize="end" android:maxEms="140"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRatingListProfile" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/ic_star_orange_rating_24dp"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewDescriptionListProfile"
                    app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewRatingListProfile"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewGetFullDetailsListProfile"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionListProfile"
                    android:layout_marginTop="8dp" android:text="@string/text_view_get_full_details_search_item"
                    android:textStyle="bold|italic" android:textAlignment="center" android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryLight" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewPosterListProfile"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewListProfileNumberPosition" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewPosterListProfile"
                    android:textSize="24sp" android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp" android:textStyle="italic"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewListProfileDateAt" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionListProfile"
                    android:textStyle="italic"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_stars_black_your"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewListProfileNumberPosition"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="4dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewListProfileYourRating"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewPosterListProfile"
                    android:layout_marginEnd="2dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="2dp" android:textAlignment="center"
                    android:textStyle="bold" android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>