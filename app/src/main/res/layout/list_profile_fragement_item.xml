<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLayout7"
              android:animateLayoutChanges="true"
              android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundPrimary"
            app:cardCornerRadius="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" android:id="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageViewPosterListProfile"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/view"
                    app:layout_constraintTop_toTopOf="parent" android:background="#32000000"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:id="@+id/textViewTitleListProfile"
                    android:textStyle="bold|italic" android:textSize="16sp"
                    android:maxLines="2" android:ellipsize="end"
                    android:maxEms="35" android:padding="2dp"
                    android:shadowColor="#000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    app:layout_constraintTop_toTopOf="@+id/imageViewPosterListProfile"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/textViewListProfileNumberPosition"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewDateReleastListProfile"
                    android:textColor="@color/colorPrimaryTextDark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:id="@+id/textViewDateReleastListProfile"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:shadowColor="#000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="32dp"
                    android:textColor="@color/colorPrimaryTextDark"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:shadowColor="#000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:id="@+id/textViewRatingListProfile" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
                    android:textColor="@color/colorAccentLight"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/ic_star_orange_rating_24dp"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewRatingListProfile"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewListProfileNumberPosition"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    android:shadowColor="#000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/colorPrimaryTextDark" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewListProfileDateAt"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewPosterListProfile"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/ConsContainer"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_stars_black_your"
                    android:id="@+id/imageViewFinalRate"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewPosterListProfile"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass"
                    android:id="@+id/textViewListProfileYourRating"
                    android:textAlignment="center"
                    android:textStyle="bold" android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewFinalRate"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewPosterListProfile"
                    app:layout_constraintBottom_toTopOf="@+id/ConsContainer"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter_rating_characters"
                    android:id="@+id/imageViewFilterIcon"
                    app:layout_constraintStart_toStartOf="@+id/textViewListProfileYourRating"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textViewListProfileYourRating"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewListProfileYourRating"
                    android:visibility="gone"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRatingFilterSelected"
                    app:layout_constraintStart_toEndOf="@+id/imageViewFilterIcon"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imageViewFilterIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewFilterIcon"
                    android:fontFamily="@font/overpass" android:textSize="18sp" android:textColor="@color/colorAccent"
                    android:visibility="gone" android:textStyle="bold"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/ic_arrow_down"
                    android:id="@+id/imageViewArrowDown"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewPosterListProfile"
                    app:layout_constraintEnd_toStartOf="@+id/guideline17" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline16" android:layout_marginTop="4dp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline16"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.4"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline17"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.6"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="visible"
                    android:tag="close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="290dp" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ConsContainer"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewArrowDown">


                <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:id="@+id/guideline18"
                                                            android:orientation="vertical"
                                                            app:layout_constraintGuide_percent="0.5"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:id="@+id/buttonUpdateRating" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/button_rounded_transparent_color"
                        android:text="@string/profile_rating_btn_update" android:fontFamily="@font/overpass"
                        android:textStyle="italic" android:textAllCaps="false"/>
                <TextView
                        android:text="@string/profile_rating_label_update_story"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelRatingStory" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp" android:textStyle="italic"
                        android:fontFamily="@font/overpass" android:textColor="@color/colorPrimaryText"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelCharactersRating" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline18" android:layout_marginStart="8dp"
                        android:fontFamily="@font/overpass" android:textColor="@color/colorPrimaryText"
                        android:text="@string/profile_rating_label_update_characters"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter_rating_story"
                        android:id="@+id/imageView8" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelRatingStory"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                <EditText
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextRatingStory" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelRatingStory"
                        android:background="@drawable/edittext_rounded"
                        android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/imageView8"
                        android:layout_marginStart="8dp" android:fontFamily="@font/overpass" android:maxLength="3"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter_rating_characters"
                        android:id="@+id/imageView9" app:layout_constraintStart_toStartOf="@+id/guideline18"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelCharactersRating"/>
                <EditText
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:inputType="number|numberDecimal"
                        android:fontFamily="@font/overpass"
                        android:ems="10"
                        android:id="@+id/editTextRatingCharacters" app:layout_constraintStart_toEndOf="@+id/imageView9"
                        android:layout_marginStart="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelCharactersRating"
                        app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/edittext_rounded"
                        android:maxLength="3"/>


                <TextView
                        android:text="@string/profile_rating_label_update_soundtrack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelRatingSoundtrack" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextRatingStory"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp" android:textStyle="italic"
                        android:fontFamily="@font/overpass" android:textColor="@color/colorPrimaryText"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelPhotographyRating" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextRatingCharacters"
                        app:layout_constraintStart_toStartOf="@+id/guideline18" android:layout_marginStart="8dp"
                        android:fontFamily="@font/overpass" android:textColor="@color/colorPrimaryText"
                        android:text="@string/profile_rating_label_update_photography"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter_rating_soundtrack"
                        android:id="@+id/imageView10" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelRatingSoundtrack"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                <EditText
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextRatingSoundtrack" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelRatingSoundtrack"
                        android:background="@drawable/edittext_rounded"
                        android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/imageView10"
                        android:layout_marginStart="8dp" android:fontFamily="@font/overpass" android:maxLength="3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter_rating_effects"
                        android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="@+id/guideline18"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelPhotographyRating"/>
                <EditText
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:inputType="number|numberDecimal"
                        android:fontFamily="@font/overpass"
                        android:ems="10"
                        android:id="@+id/editTextRatingPhotography"
                        app:layout_constraintStart_toEndOf="@+id/imageView11"
                        android:layout_marginStart="8dp" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelPhotographyRating"
                        app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/edittext_rounded"
                        android:maxLength="3"/>


                <TextView
                        android:text="@string/profile_rating_label_update_enjoyment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelRatingEnjoyment" android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextRatingSoundtrack"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp" android:textStyle="italic"
                        android:fontFamily="@font/overpass" android:textColor="@color/colorPrimaryText"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter_rating_enjoyment"
                        android:id="@+id/imageView12" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelRatingEnjoyment"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                <EditText
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:inputType="number|numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextRatingEnjoyment" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelRatingEnjoyment"
                        android:background="@drawable/edittext_rounded"
                        android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/imageView12"
                        android:layout_marginStart="8dp" android:fontFamily="@font/overpass" android:maxLength="3"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView65" app:layout_constraintStart_toStartOf="@+id/guideline18"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextRatingPhotography"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:fontFamily="@font/overpass" android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryText" android:textStyle="italic"
                        android:text="@string/profile_rating_label_update_new_final_rate"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_stars_black_your"
                        android:id="@+id/imageView13" app:layout_constraintStart_toStartOf="@+id/guideline18"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView65"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewNewRatingFinal"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView65"
                        app:layout_constraintStart_toEndOf="@+id/imageView13" android:layout_marginStart="8dp"
                        android:textStyle="bold|italic" android:textColor="@color/colorPrimaryText"/>
                <TextView
                        android:text="@string/search_item_details_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLabelRatingStatus" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextRatingEnjoyment"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline18" android:layout_marginEnd="8dp"
                        android:textStyle="italic" android:textColor="@color/colorPrimaryText" android:textSize="16sp"/>

                <Spinner android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/spinnerStatusRating"
                         app:layout_constraintStart_toStartOf="@+id/guideline18" android:layout_marginStart="8dp"
                         android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView13"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>