<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
             layout="@layout/toolbar"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="235dp"
            android:id="@+id/imageViewBackDrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <ImageView
            android:layout_width="135dp"
            android:layout_height="200dp"
            android:id="@+id/imageViewItemSearchDetailsPoster"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBackDrop" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_star_orange_rating_24dp"
            android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"/>
    <TextView
            android:text="@string/searchItemDetailsrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSearchItemDetailsRate"
            android:textSize="18sp" android:textColor="@color/colorAccentDark" android:textStyle="bold|italic"
            android:background="@drawable/button_rounded_transparent_color"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7" android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0"/>

    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewBackDrop"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
                android:id="@+id/scrollView3">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTitleDetails" android:textStyle="bold"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDateRelease" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/textViewTitleDetails"
                    app:layout_constraintEnd_toEndOf="@+id/textViewTitleDetails" android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitleDetails" android:layout_marginTop="8dp"/>

            <TextView
                    android:text="@string/search_item_details_original_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold" app:layout_constraintTop_toTopOf="@+id/textViewTitleOriginal"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTitleOriginal"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTitleOriginal"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    android:layout_marginStart="16dp" android:textStyle="italic"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewSearchItemDetailsStatus"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewSearchItemDetailsStatus"
                    app:layout_constraintTop_toTopOf="@+id/textViewSearchItemDetailsStatus" android:padding="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:text="@string/search_item_details_director" android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintBottom_toTopOf="@+id/textView7"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewsearchItemdetailsNameDirector"
                    app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="24dp"
                    android:textStyle="italic" android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/textView9" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/search_item_details_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/textViewDateRelease"
                    app:layout_constraintEnd_toEndOf="@+id/textViewDateRelease" android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDateRelease"
                    app:layout_constraintHorizontal_bias="0.918"/>

            <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSearchItemDetailsStatus"
                    android:textStyle="italic" android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" android:lines="1"
                    android:padding="1dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"/>
            <Button
                    android:text="@string/btn_search_item_details_your_list"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/buttonSearchItemDetailsAddInYourList"
                    android:textAllCaps="false"
                    android:background="@drawable/button_rounded_transparent_color"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewTitleOriginal" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintHorizontal_bias="0.713"/>

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_playlist_add_black_24dp"
                    android:id="@+id/imageViewSearchDetailsAddYourTop"
                    app:layout_constraintStart_toEndOf="@+id/buttonSearchItemDetailsAddInYourList"
                    android:layout_marginStart="50dp"
                    app:layout_constraintTop_toTopOf="@+id/buttonSearchItemDetailsAddInYourList"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonSearchItemDetailsAddInYourList"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSearchDetailsAllDescription" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:padding="4dp" android:textSize="18sp"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textStyle="italic"
                    android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonSearchItemDetailsAddInYourList"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>






</android.support.constraint.ConstraintLayout>