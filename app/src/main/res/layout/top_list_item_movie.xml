<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLayout7"
              android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundPrimary"
            app:cardCornerRadius="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:id="@+id/imageViewPosterTopMovies"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    android:padding="0dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTitleTopMovies"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold|italic" android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textViewDateReleastTopMovies" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageViewPosterTopMovies" android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    android:maxLines="2" android:ellipsize="end"
                    android:maxEms="35" android:padding="2dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDateReleastTopMovies"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="16dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:id="@+id/textViewDescriptionTopMovies" app:layout_constraintStart_toEndOf="@+id/imageViewPosterTopMovies"
                    android:layout_marginStart="8dp"
                    android:maxLines="5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:textStyle="italic" android:textAlignment="viewStart"
                    android:textSize="14sp" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewRatingTopMovies"
                    android:ellipsize="end" android:maxEms="140"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:id="@+id/textViewRatingTopMovies" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/ic_star_orange_rating_24dp"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewDescriptionTopMovies"
                    app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewRatingTopMovies"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_playlist_add_black_24dp"
                    android:id="@+id/imageViewAddToMyListTopMovies" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionTopMovies"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

            <View android:layout_width="45dp"
                  android:layout_height="35dp"
                  android:background="#A77E57C2" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" android:id="@+id/view3"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTopListMovies"
                    android:textColor="@color/colorAccentDark" android:textStyle="bold|italic"
                    android:shadowColor="#000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:padding="4dp"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@+id/view3" app:layout_constraintBottom_toBottomOf="@+id/view3"
                    app:layout_constraintStart_toStartOf="@+id/view3" android:layout_marginStart="1dp"/>



        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>